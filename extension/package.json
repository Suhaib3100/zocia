  "devDependencies": {
    "@types/chrome": "^0.0.281",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "2.1.5",
    "autoprefixer": "^10.4.19",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vitest": "^2.1.5",
    "wxt": "^0.18.10"
  }
}
