{
  "name": "replier",
  "description": "AI replier for Social Media",
  "private": true,
  "version": "2.1",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
